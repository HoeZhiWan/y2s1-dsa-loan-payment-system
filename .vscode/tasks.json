{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe${fileDirname}\\main.exe",
				"${fileDirname}\\*.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
			"label": "Build Loan System (cl.exe)",
			"type": "shell",
			"command": "cl.exe",
			"args": [
				"/EHsc",
				"/Fe:${workspaceFolder}\\loanSystem.exe",
				"${workspaceFolder}\\main.cpp",
				"${workspaceFolder}\\loanSystem.cpp",
				"${workspaceFolder}\\loan.cpp",
				"${workspaceFolder}\\user.cpp",
				"${workspaceFolder}\\payment.cpp",
				"${workspaceFolder}\\menu.cpp",
				"${workspaceFolder}\\fileHandling.cpp",
				"${workspaceFolder}\\searchNsort.cpp"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		}
	],
	"version": "2.0.0"
}